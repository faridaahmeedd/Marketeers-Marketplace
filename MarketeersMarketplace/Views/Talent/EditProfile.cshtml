@model MarketeersMarketplace.ViewModels.TalentProfileVM

@{
    ViewData["Title"] = "Edit Profile";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Marketeer's Marketplace - Your Ultimate Guide for your Marketing Campaign</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="./assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="./css/styles.css" rel="stylesheet" />
</head>
<body class="d-flex flex-column h-100">
    <section class="py-5">
        <div class="container px-5">
            <div class="row gx-5 justify-content-center">
                <div class="col-lg-5">
                    <div class="card shadow-lg border-0 rounded-lg mt-2">
                        <div class="card-header">
                            <h3 class="text-center font-weight-light my-4">Edit Profile</h3>
                        </div>
                        <div class="card-body">
                            <form asp-action="EditProfile" enctype="multipart/form-data">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-floating mb-3">
                                    <input asp-for="FName" class="form-control" placeholder="First Name" />
                                    <label asp-for="FName">First Name</label>
                                    <span asp-validation-for="FName" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <input asp-for="LName" class="form-control" placeholder="Last Name" />
                                    <label asp-for="LName">Last Name</label>
                                    <span asp-validation-for="LName" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <input asp-for="MobileNumber" class="form-control" placeholder="Mobile Number" />
                                    <label asp-for="MobileNumber">Mobile Number</label>
                                    <span asp-validation-for="MobileNumber" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <textarea asp-for="Bio" class="form-control" placeholder="Bio" style="resize: vertical; min-height: 100px; max-height: 200px"></textarea>
                                    <label asp-for="Bio">Bio</label>
                                    <span asp-validation-for="Bio" class="text-danger"></span>
                                </div>
                                <div class="d-flex justify-content-center mb-3">
                                    <select id="SelectedCategory" name="SelectedCategory" class="form-select w-100" asp-for="SelectedCategory" asp-items="ViewBag.Categories">
                                    </select>
                                </div>
                                <div class="form-floating mb-3">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-floating">
                                                <input asp-for="City" class="form-control" placeholder="City" />
                                                <label asp-for="City">City</label>
                                                <span asp-validation-for="City" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-floating">
                                                <input asp-for="Country" class="form-control" placeholder="Country" />
                                                <label asp-for="Country">Country</label>
                                                <span asp-validation-for="Country" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-floating mb-3">
                                    <input asp-for="InstagramUrl" class="form-control" placeholder="InstagramUrl" />
                                    <label asp-for="InstagramUrl">Instagram Url</label>
                                    <span asp-validation-for="InstagramUrl" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <input asp-for="TiktokUrl" class="form-control" placeholder="TiktokUrl" />
                                    <label asp-for="TiktokUrl">Tiktok Url</label>
                                    <span asp-validation-for="TiktokUrl" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <input asp-for="FacebookUrl" class="form-control" placeholder="FacebookUrl" />
                                    <label asp-for="FacebookUrl">Facebook Url</label>
                                    <span asp-validation-for="FacebookUrl" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label for="Pictures" class="form-label">Upload Pictures (Max 10)</label>
                                    <input asp-for="Pictures" type="file" class="form-control" id="Pictures" multiple accept="image/*" />
                                    <span asp-validation-for="Pictures" class="text-danger"></span>
                                </div>
                                <div id="imagePreviews" class="d-flex flex-wrap mb-3">
                                    @if (Model.ExistingImageUrls != null)
                                    {
                                        @foreach (var imageUrl in Model.ExistingImageUrls)
                                        {
                                            <div class="image-preview-container">
                                                <img src="~/images/@imageUrl" alt="Existing Image" />
                                                <button type="button" class="remove-img-btn" onclick="removeImage('@imageUrl')">&times;</button>
                                            </div>
                                        }
                                    }
                                </div>
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary btn-block">Edit Profile</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="./js/scripts.js"></script>
    <script>
        document.getElementById('Pictures').addEventListener('change', function (event) {
            const imagePreviewsContainer = document.getElementById('imagePreviews');
            const files = event.target.files;

            // Loop through the uploaded files and add them to the preview container
            for (const file of files) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    const img = document.createElement('img');
                    img.src = e.target.result;
                    img.classList.add('image-preview');

                    const container = document.createElement('div');
                    container.classList.add('image-preview-container');
                    container.appendChild(img);

                    // Create and append the remove button
                    const removeBtn = document.createElement('button');
                    removeBtn.classList.add('remove-img-btn');
                    removeBtn.innerHTML = '&times;'; // × character
                    removeBtn.onclick = function () {
                        container.remove();
                        // Handle file removal if necessary
                    };
                    container.appendChild(removeBtn);

                    imagePreviewsContainer.appendChild(container);
                };
                reader.readAsDataURL(file);
            }
        });

        function removeImage(imageUrl) {
            // Remove the image preview container
            const imagePreviewsContainer = document.getElementById('imagePreviews');
            const imagePreviewContainers = imagePreviewsContainer.getElementsByClassName('image-preview-container');

            for (const container of imagePreviewContainers) {
                if (container.querySelector('img').src.includes(imageUrl)) {
                    container.remove();
                    break;
                }
            }

            // Send a request to the server to remove the image file
            fetch(`/Talent/RemoveImage?imageUrl=${encodeURIComponent(imageUrl)}`, {
                method: 'POST',
            }).then(response => {
                if (!response.ok) {
                    console.error('Error removing image');
                }
            }).catch(error => console.error('Error:', error));
        }
    </script>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
