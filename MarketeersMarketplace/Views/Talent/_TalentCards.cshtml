@using MarketeersMarketplace.ViewModels
@model List<TalentCardVM>

@foreach (var talent in Model)
{
    <div class="col-lg-4 mb-5">
        <a href="/Talent/DisplayProfile?id=@talent.Id" class="card h-100 shadow border-0 text-decoration-none text-dark">
            <img class="card-img-top fixed-image" src="~/images/@talent.ImagePath" alt="..." />
            <div class="card-body p-4">
                <div class="badge bg-primary bg-gradient rounded-pill mb-2">@talent.CategoryName</div>
                <h5 class="card-title mb-3">@talent.Name</h5>
                <p class="card-text mb-0">@talent.Bio</p>
            </div>
        </a>
    </div>
}

